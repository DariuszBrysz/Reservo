---
/**
 * Forgot Password Page
 *
 * Allows users to initiate the password recovery process by requesting a reset link.
 */
import { isFeatureEnabled } from "../features";

if (!isFeatureEnabled("auth")) {
  return Astro.redirect("/404");
}

import Layout from "../layouts/Layout.astro";
import { ForgotPasswordForm } from "../components/auth/ForgotPasswordForm";
---

<Layout title="Forgot Password - Reservo">
  <div class="container mx-auto px-4 py-16 flex items-center justify-center min-h-[calc(100vh-4rem)]">
    <ForgotPasswordForm client:load />
  </div>
</Layout>
