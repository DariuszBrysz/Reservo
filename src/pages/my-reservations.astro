---
/**
 * My Reservations Page
 *
 * Displays a tabbed interface showing the user's upcoming, past, and canceled reservations.
 * Allows users to edit duration, cancel reservations (>12h before start), and export to .ics.
 */

import Layout from "../layouts/Layout.astro";
import MyReservationsView from "../components/views/MyReservationsView";
import { isFeatureEnabled } from "../features";

// Check if reservations feature is enabled
if (!isFeatureEnabled("reservations")) {
  return Astro.redirect("/404");
}

export const prerender = false;
---

<Layout title="My Reservations - Reservo">
  <MyReservationsView client:load />
</Layout>
